extends layout

block content
  include ./header
  include ./navbar
  section
    .container.pt-3
      .row.justify-content-sm-center
        .col-sm-6.col-md-4
          .card.border-info.text-center
            .card-header
              | Sign up to continue
            .card-body
              form.form-signin(action='/login' method='post')
                fieldset
                  legend Sign up                  
                  .row.align-items-center.mt-4
                    .col
                      input.form-control(type='text' name='username' placeholder='Username' required)
                  .row.align-items-center.mt-4
                    .col
                      input.form-control(type='email' name='email' placeholder='Email' required)
                  .row.align-items-center.mt-4
                    .col
                      input.form-control(type='password' name='password' placeholder='Password' required)
                    .col
                      input.form-control(type='password' name='confirm' placeholder='Confirm Password' required)
                  .row.justify-content-start.mt-4
                    .col
                      input.btn.btn-primary.mt-4(type='submit')
          a.float-right(href='/login') Already have an account
  include ./footer
